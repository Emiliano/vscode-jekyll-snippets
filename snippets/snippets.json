{
	"assign": {
		"prefix": "assign",
		"body": "{% assign $1 = $2 %}",
		"description": "Create a Liquid template variable",
		"scope": "text.html, text.html.markdown, source.json, text.html.textile"
	},
	"break": {
		"prefix": "break",
		"body": "{% break %}",
		"description": "Insert a Liquid template break tag",
		"scope": "text.html, text.html.markdown, source.json, text.html.textile"
	},
	"capture": {
		"prefix": "capture",
		"body": "\n{% capture $1 %}\n$0\n{% endcapture %}\n",
		"description": "Capture a string and assign to a variable",
		"scope": "text.html, text.html.markdown, source.json, text.html.textile"
	},
	"case": {
		"prefix": "case",
		"body": "\n{% case $1 %}\n    $0\n{% endcase %}\n ",
		"description": "Creates the start of a switch statement",
		"scope": "text.html, text.html.markdown, source.json, text.html.textile"
	},
	"comment": {
		"prefix": "comment",
		"body": "\n{% comment %}\n$0\n{% endcomment %}\n\t",
		"description": "Adds a comment block",
		"scope": "text.html, text.html.markdown, source.json, text.html.textile"
	},
	"va": {
		"prefix": "va",
		"body": "{{ $1 }}",
		"description": "Create a Variable",
		"scope": "text.html, text.html.markdown, source.json, text.html.textile"
	},
	"continue": {
		"prefix": "continue",
		"body": "{% continue %}",
		"description": "Add a continue tag to a loop",
		"scope": "text.html, text.html.markdown, source.json, text.html.textile"
	},
	"cycle": {
		"prefix": "cycle",
		"body": "{% cycle $1 %}",
		"description": "Cycle through values in a for block",
		"scope": "text.html, text.html.markdown, source.json, text.html.textile"
	},
	"decrement": {
		"prefix": "decrement",
		"body": "{% decrement $1 %}",
		"description": "Decrement an amount",
		"scope": "text.html, text.html.markdown, source.json, text.html.textile"
	},
	"elsif": {
		"prefix": "elsif",
		"body": "{% elsif $1 %}",
		"description": "Add an else/if clause",
		"scope": "text.html, text.html.markdown, source.json, text.html.textile"
	},
	"for": {
		"prefix": "for",
		"body": "\n{% for $1 in $2 %}\n$0\n{% endfor %}\n\t",
		"description": "Create a for block",
		"scope": "text.html, text.html.markdown, source.json, text.html.textile"
	},
	"gist": {
		"prefix": "gist",
		"body": "{% gist $1 %}",
		"description": "Quickly include a tag for a Gist code snippet",
		"scope": "text.html, text.html.markdown, source.json, text.html.textile"
	},
	"highlight": {
		"prefix": "highlight",
		"body": "\n{% highlight $1 %}\n$0\n{% endhighlight %}\n ",
		"description": "Quickly include a code block for use with the Rouge syntax highlighter",
		"scope": "text.html, text.html.markdown, source.json, text.html.textile"
	},
	"if": {
		"prefix": "if",
		"body": "\n{% if $1 %}\n$0\n{% endif %}\n ",
		"description": "Create an if statement",
		"scope": "text.html, text.html.markdown, source.json, text.html.textile"
	},
	"ifelse": {
		"prefix": "ifelse",
		"body": "\n{% if $1 %}\n$2\n{% else %}\n$0\n{% endif %}\n\t",
		"description": "Create an IF/ELSE statement",
		"scope": "text.html, text.html.markdown, source.json, text.html.textile"
	},
	"include": {
		"prefix": "include",
		"body": "{% include $1 %}",
		"description": "Include a named template",
		"scope": "text.html, text.html.markdown, source.json, text.html.textile"
	},
	"include_relative": {
		"prefix": "include_relative",
		"body": "{% include_relative $1 %}",
		"description": "Include a named template relative to the current file",
		"scope": "text.html, text.html.markdown, source.json, text.html.textile"
	},
	"increment": {
		"prefix": "increment",
		"body": "{% increment $1 %}",
		"description": "Increment an amount",
		"scope": "text.html, text.html.markdown, source.json, text.html.textile"
	},
	"post_url": {
		"prefix": "post_url",
		"body": "{% post_url $1 %}",
		"description": "Quickly include a tag for the current posts's permalink URL",
		"scope": "text.html, text.html.markdown, source.json, text.html.textile"
	},
	"raw": {
		"prefix": "raw",
		"body": "\n{% raw %}\n$0\n{% endraw %}\n",
		"description": "Create a raw/unprocessed block",
		"scope": "text.html, text.html.markdown, source.json, text.html.textile"
	},
	"unless": {
		"prefix": "unless",
		"body": "\n{% unless $1 %}\n$0\n{% endunless %}\n ",
		"description": "Opposite of an IF clause",
		"scope": "text.html, text.html.markdown, source.json, text.html.textile"
	},
	"when": {
		"prefix": "when",
		"body": "{% when $1 %} ",
		"description": "Part of a switch statement",
		"scope": "text.html, text.html.markdown, source.json, text.html.textile"
	},
	{
	"post_list":{
		"prefix": "post_list",
		"body":[
			"<ul>",
				"{% for post in site.posts %}",
					"<li>",
						"<a href=\t\"{{ post.url }}\">",
							"{{ post.title }}",
						"</a>"
						"<time>{{ post.date | date: \t\"%B %-d, %Y\" }}</time>",
					"</li>",
				"{% endfor %}",
			"</ul>"
		],
		"description": "Create a Post list",
		"scope": "text.html, text.html.markdown, source.json, text.html.textile"
		}
	}
}
